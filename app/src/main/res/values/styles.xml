<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/mint</item>
        <item name="colorPrimaryDark">@color/boldGray</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/mint</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/lightGray</item>
    </style>

</resources>
