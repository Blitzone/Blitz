<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarLayout">

        <include
            android:id="@+id/toolbar_of_search"
            layout="@layout/mint_toolbar"/>

        <android.support.v7.widget.SearchView
            android:id="@+id/mSearch"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            app:defaultQueryHint="Search for users"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/divider3"
            android:layout_toEndOf="@+id/divider3">
        </android.support.v7.widget.SearchView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/toolbar_title_search"
            android:textSize="18sp"
            android:id="@+id/search_toolbar_title"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/blitzone_from_search"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/blitzone_from_search"
            android:background="@mipmap/ic_white_back"
            android:onClick="blitzoneFromSearchButtonCallback"
            android:scaleType="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"/>

        <View style="@style/DividerBackIcon"
            android:id="@+id/divider3"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/blitzone_from_search"
            android:layout_toEndOf="@+id/blitzone_from_search" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/myRecycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</LinearLayout>
