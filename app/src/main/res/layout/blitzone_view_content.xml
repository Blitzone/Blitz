<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:src="@mipmap/ic_profile_avatar"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:text="@string/name_blitzone_view_content"
        android:textSize="17sp"
        android:textColor="@color/boldGray"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/profile_picture"
        android:layout_toRightOf="@+id/profile_picture"
        android:layout_toEndOf="@+id/profile_picture"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/points"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:text="@string/points_blitzone_view_content"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_alignBottom="@+id/profile_picture"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="7dp"/>

    <ImageView
        android:id="@+id/blitz"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_orange_blitz"
        android:scaleType="center"
        android:layout_alignTop="@+id/points"
        android:layout_alignLeft="@+id/dislike"
        android:layout_alignStart="@+id/dislike" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/white"
        android:id="@+id/view"
        android:layout_below="@+id/like"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/blitzButton"
        android:background="@drawable/blitz_button_selector"
        android:layout_below="@+id/chapterOfTheDay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="sendBlitzCallback"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/like"
        android:background="@drawable/like_button_selector"
        android:layout_below="@+id/chapterOfTheDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dislike"
        android:background="@drawable/dislike_button_selector"
        android:layout_below="@+id/chapterOfTheDay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:id="@+id/chapterOfTheDay"
        android:layout_below="@+id/profile_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/lightGray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chapter_blitzone_view_content"
        android:id="@+id/chapterDescription"
        android:textSize="18sp"
        android:textColor="@color/boldGray"
        android:textAlignment="center"
        android:layout_below="@+id/blitzButton"
        android:layout_alignLeft="@+id/profile_picture"
        android:layout_alignStart="@+id/profile_picture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timePublished_blitzone_view_content"
        android:id="@+id/timePublished"
        android:textColor="@color/gray"
        android:textSize="10sp"
        android:layout_below="@+id/chapterDescription"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/lightGray"
        android:id="@+id/view1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>