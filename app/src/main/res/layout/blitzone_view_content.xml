<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.example.bsaraci.blitzone.Profile.RoundedImageView
        android:id="@+id/profile_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:src="@color/lightGray"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:text="@string/name_blitzone_view_content"
        android:textSize="17sp"
        android:textColor="@color/boldGray"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/profile_picture"
        android:layout_toRightOf="@+id/profile_picture"
        android:layout_toEndOf="@+id/profile_picture"
        android:layout_marginTop="12dp" />
    <TextView
        android:id="@+id/points"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="@string/points_blitzone_view_content"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:layout_alignTop="@+id/profile_picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/blitzIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_gray_blitz"
        android:scaleType="center"
        android:layout_below="@+id/chapterOfTheDay"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/blitzClickedIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_orange_blitz"
        android:scaleType="center"
        android:visibility="invisible"
        android:layout_below="@+id/chapterOfTheDay"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"
        android:id="@+id/view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/like"
        android:background="@mipmap/ic_gray_like"
        android:layout_below="@+id/chapterOfTheDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likeClicked"
        android:background="@mipmap/ic_like_clicked"
        android:visibility="invisible"
        android:layout_below="@+id/chapterOfTheDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dislike"
        android:background="@mipmap/ic_gray_dislike"
        android:layout_below="@+id/chapterOfTheDay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dislikeClicked"
        android:background="@mipmap/ic_dislike_clicked"
        android:visibility="invisible"
        android:layout_below="@+id/chapterOfTheDay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

        <com.example.bsaraci.blitzone.Blitzone.CustomRecyclerView
            android:id="@+id/chapterOfTheDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_picture"
            android:layout_alignRight="@+id/dislike"
            android:layout_alignEnd="@+id/dislike" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/lightGray"
        android:id="@+id/view1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="blitzes"
        android:id="@+id/blitzesTextViewDaily"
        android:textSize="12sp"
        android:textColor="@color/mint"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/points"
        android:layout_alignLeft="@+id/points"
        android:layout_alignStart="@+id/points"
        android:layout_alignRight="@+id/points"
        android:layout_alignEnd="@+id/points" />


</RelativeLayout>
</LinearLayout>