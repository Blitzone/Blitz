<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/mint">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/blitz_start"
        android:background="@mipmap/ic_blitz"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="25sp"
        android:id="@+id/topicStart"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:animateLayoutChanges="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/chapter1"
        android:textColor="@color/transparentWhite"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/topicStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:animateLayoutChanges="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/chapter2"
        android:textColor="@color/transparentWhite"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/chapter1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:animateLayoutChanges="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/chapter3"
        android:textColor="@color/transparentWhite"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/chapter2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/chapter4"
        android:textColor="@color/transparentWhite"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/chapter3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/chapter5"
        android:textColor="@color/transparentWhite"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/chapter4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_slogan"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:id="@+id/appSlogan"
        android:layout_below="@+id/blitz_start"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
