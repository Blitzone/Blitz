<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/fullSizeImage"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@color/white"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likeFullSize"
        android:background="@mipmap/ic_white_like"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dislikeFullSize"
        android:background="@mipmap/ic_white_dislike"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="112"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:id="@+id/numberOfLikes"
        android:layout_above="@+id/likeFullSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/likeFullSize"
        android:layout_alignEnd="@+id/likeFullSize"
        android:layout_alignTop="@+id/numberOfDisikes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:id="@+id/numberOfDisikes"
        android:layout_above="@+id/dislikeFullSize"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/dislikeFullSize"
        android:layout_alignStart="@+id/dislikeFullSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:id="@+id/chapterFullSize"
        android:layout_alignBottom="@+id/likeFullSize"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/profile_from_notifications"
        android:background="@mipmap/ic_back"
        android:onClick="profileFromFullSize"
        android:scaleType="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:id="@+id/usernameFullSize"
        android:layout_alignBottom="@+id/profile_from_notifications"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>