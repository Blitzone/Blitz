<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar_of_notifications"
        layout="@layout/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/toolbar_title_notifications"
        android:textSize="18sp"
        android:id="@+id/notifications_toolbar_title"
        android:textColor="@color/mint"
        android:layout_alignBottom="@+id/profile_from_notifications"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profile_from_notifications"
        android:background="@mipmap/ic_mint_back_icon"
        android:onClick="profileFromNotificationsButtonCallback"
        android:scaleType="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"/>

    <View style="@style/DividerToolbar"
        android:id="@+id/divider3"
        android:layout_below="@+id/toolbar_of_notifications"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>