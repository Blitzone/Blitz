<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_yellow_profile"
        android:scaleType="center" />

    <TextView
        android:id="@+id/name"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="mikelv92"
        android:textSize="20sp"
        android:textColor="@color/boldGray"
        android:layout_alignTop="@+id/profile_picture"
        android:layout_toRightOf="@+id/profile_picture"
        android:layout_toEndOf="@+id/profile_picture" />
    <TextView
        android:id="@+id/points"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="117"
        android:textSize="15sp"
        android:textColor="@color/lightGray"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/profile_picture"
        android:layout_toEndOf="@+id/profile_picture" />

    <ImageView
        android:id="@+id/blitz"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_yellow_blitz"
        android:scaleType="center"
        android:layout_alignBottom="@+id/points"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1px"
        android:background="@color/gray"
        android:id="@+id/view"
        android:layout_below="@+id/profile_picture"
        android:layout_centerHorizontal="true">
    </View>

</RelativeLayout>